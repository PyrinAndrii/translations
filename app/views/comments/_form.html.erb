<%= form_with(model: [ @post, @post.comments.build ], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_field :name, placeholder: 'Your Name *', class: 'form-control form-control-lg' %>
  </div>
  <div class="form-group">
    <%= form.text_area :body, placeholder: 'Your Comment *', rows: 5, class: 'form-control form-control-lg' %>
  </div>
  <div>
    <%= form.submit class: 'btn btn-lg btn-outline-primary' %>
  </div>
<% end %>
