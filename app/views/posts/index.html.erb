<!-- Title -->
<header class="mt-78">
  <div class="jumbotron jumbotron-fluid" id="title-about-page">
    <div class="container text-center">
      <h1 class="display-4">All Posts</h1>
      <p class="lead">Interesting to know</p>
    </div>
  </div>
</header>

<div class="container-fluid mb-5">
  <p id="notice"><%= notice %></p>

<!-- Add New Post -->
  <%= link_to new_post_path, class: 'btn btn-success mb-3' do %>
    <%= icon('fas', 'plus') %> New Post
  <% end %>
<!-- End Add New Post -->
  <hr>
  <!-- Start row -->
  <div class="row">
    <!-- Left column -->
    <div class="col-lg-8 mb-9 mb-lg-0">
      <div class="row">
      <!-- Start post card -->
        <%= render @posts %>
      <!-- End post card -->
      </div>
      <!-- Pagination 8 align center -->
      <div class="d-flex justify-content-center mt-5"><%= paginate @posts %></div>

    </div>
    <!-- End Left column -->

    <!-- Right column -->
    <div class="col-lg-4">
      <%= render 'shared/right-column' %>
    </div>
    <!-- End Right column -->
  </div>
  <!-- End row -->
</div>
<!-- End container -->
