<article class="card col-md-6 border-0 p-0">
  <div class="card-body mb-4">
    <div class="mb-4">
      <%= link_to post do %>
        <%= image_tag(post.image_url(:thumb), class: 'img-fluid rounded') if post.image? %>
      <% end %>
    </div>
    <small class="d-block text-secondary mb-2">
      <%= post.created_at.strftime("%B %d, %Y") %>
    </small>
    <h2 class="h3 mb-4">
      <%= link_to post.title, post %>
    </h2>
    <p><%= post.description %></p>
    <!-- Tags -->
    <p><%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'btn btn-sm btn-outline-primary' }.join(' ') %></p>
  </div>
</article>
